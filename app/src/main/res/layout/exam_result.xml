<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="@dimen/dp_10"
    app:cardCornerRadius="@dimen/dp_10">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/exam_card_top"
            app:cardElevation="@dimen/dp_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_50">
            <TextView
                android:padding="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/resut_details"/>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_below="@id/exam_card_top"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:id="@+id/progress_card"
            android:weightSum="2"
            android:gravity="center"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">
                <RelativeLayout
                    android:layout_marginStart="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:id="@+id/progress_correct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/dp_5"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_marginEnd="@dimen/dp_5"
                        android:layout_marginBottom="@dimen/dp_5"
                        app:indicatorColor="?attr/colorPrimary"
                        app:indicatorSize="@dimen/dp_60"
                        app:trackColor="@color/white1"
                        app:trackThickness="@dimen/dp_5" />

                    <TextView
                        android:id="@+id/correct_percent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="0%" />
                </RelativeLayout>
                <TextView
                    android:textAlignment="center"
                    android:id="@+id/ans_correct_exam"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/correct_exam"/>
            </LinearLayout>
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progress_wrong"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_5"
                    android:layout_marginTop="@dimen/dp_5"
                    android:layout_marginEnd="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_5"
                    app:indicatorColor="@color/red"
                    app:indicatorSize="@dimen/dp_60"
                    app:trackColor="@color/white1"
                    app:trackThickness="@dimen/dp_5" />

                <TextView
                    android:id="@+id/wrong_percent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text="0%" />
            </RelativeLayout>
            <TextView
                android:id="@+id/ans_wrong_exam"
                android:layout_marginEnd="@dimen/dp_20"
                android:textAlignment="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wrong_exam"/>
        </LinearLayout>

        </LinearLayout>
        <com.google.android.material.card.MaterialCardView
            android:layout_below="@+id/progress_card"
            android:id="@+id/exam_result_all"
            android:layout_width="match_parent"
            app:cardElevation="@dimen/dp_5"
            android:layout_margin="@dimen/dp_20"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginHorizontal="@dimen/dp_10"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:padding="@dimen/dp_10"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/total_question"/>
                    <TextView
                        android:padding="@dimen/dp_10"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:id="@+id/total_exam_count"
                        android:layout_height="wrap_content"
                        android:text="@string/total_question"/>
                </LinearLayout>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dividerInsetStart="16dp"
                    app:dividerInsetEnd="16dp"/>
                <LinearLayout
                    android:layout_marginHorizontal="@dimen/dp_10"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:padding="@dimen/dp_10"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/total_select"/>
                    <TextView
                        android:padding="@dimen/dp_10"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:id="@+id/total_exam_done"
                        android:layout_height="wrap_content"
                        android:text="@string/total_select"/>
                </LinearLayout>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:dividerInsetStart="16dp"
                    app:dividerInsetEnd="16dp"/>
                <LinearLayout
                    android:layout_marginHorizontal="@dimen/dp_10"
                    android:weightSum="2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:padding="@dimen/dp_10"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/time"/>
                    <TextView
                        android:padding="@dimen/dp_10"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="end"
                        android:id="@+id/total_exam_time"
                        android:layout_height="wrap_content"
                        android:text="@string/time"/>
                </LinearLayout>
            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
        <com.google.android.material.divider.MaterialDivider
            android:layout_below="@+id/exam_result_all"
            app:dividerThickness="2dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:dividerInsetStart="16dp"
            app:dividerInsetEnd="16dp"/>
        <LinearLayout
            android:layout_below="@+id/exam_result_all"
            android:layout_marginHorizontal="@dimen/dp_10"
            android:weightSum="2"
            android:id="@+id/layout_percent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:padding="@dimen/dp_10"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/exam_percent"/>
            <TextView
                android:padding="@dimen/dp_10"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="end"
                android:id="@+id/total_exam_percent"
                android:layout_height="wrap_content"
                android:text="@string/exam_percent"/>
        </LinearLayout>
        <com.google.android.material.divider.MaterialDivider
            android:layout_below="@+id/layout_percent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/divider_down"
            app:dividerThickness="2dp"
            app:dividerInsetStart="16dp"
            app:dividerInsetEnd="16dp"/>
        <TextView
            android:layout_below="@+id/divider_down"
            android:padding="@dimen/dp_10"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/dp_20"
            android:id="@+id/exam_total_number"
            android:textSize="@dimen/sp_18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/total_result"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/exam_total_number"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_marginBottom="@dimen/dp_20"

            android:padding="@dimen/dp_10"
            android:text="@string/thanks_exam"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />
    </RelativeLayout>
</com.google.android.material.card.MaterialCardView>
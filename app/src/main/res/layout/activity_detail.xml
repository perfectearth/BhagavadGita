<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/root_bg_details"
    tools:context=".DetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="?attr/homeAsUpIndicator"
        android:elevation="4dp">
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="50dp"
            android:id="@+id/txt_details"
            android:textStyle="bold"
            android:textSize="@dimen/sp_15"
            android:text="@string/first_name"/>

        <ImageButton
            android:layout_gravity="end"
            android:padding="@dimen/dp_10"
            android:layout_alignEnd="@+id/txt_details"
            android:layout_marginEnd="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_ripple"
            android:src="@drawable/setup_font"
            android:focusable="true"
            android:id="@+id/click_font"/>
    </androidx.appcompat.widget.Toolbar>
    <ImageView
        android:alpha="0.4"
        android:layout_width="@dimen/size_frame"
        android:layout_height="@dimen/size_frame"
        android:scaleType="fitXY"
        android:src="@drawable/up_frame"
        android:contentDescription="@string/app_name"/>
    <ImageView
        android:layout_alignParentEnd="true"
        android:scaleX="-1"
        android:alpha="0.4"
        android:layout_width="@dimen/size_frame"
        android:layout_height="@dimen/size_frame"
        android:scaleType="fitXY"
        android:src="@drawable/up_frame"
        android:contentDescription="@string/app_name"/>
    <ImageView
        android:alpha="0.4"
        android:layout_width="@dimen/size_frame"
        android:layout_height="@dimen/size_frame"
        android:scaleType="fitXY"
        android:scaleY="-1"
        android:layout_alignParentBottom="true"
        android:src="@drawable/down_frame"
        android:contentDescription="@string/app_name"/>
    <ImageView
        android:alpha="0.4"
        android:layout_width="@dimen/size_frame"
        android:layout_height="@dimen/size_frame"
        android:scaleType="fitXY"
        android:scaleY="-1"
        android:scaleX="-1"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/down_frame"
        android:contentDescription="@string/app_name"/>
    <androidx.core.widget.NestedScrollView
        android:layout_below="@id/toolbar"
        android:layout_width="match_parent"
        android:id="@+id/detailsScroll"
        android:layout_height="match_parent">
        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/sreee"
                android:textStyle="bold"
                android:padding="@dimen/dp_5"
                android:textSize="@dimen/sp_20"
                android:text="@string/gita_name"/>
            <TextView
                android:layout_below="@+id/sreee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:id="@+id/chapter_no"
                android:padding="@dimen/dp_5"
                android:textStyle="bold"
                android:textColor="@color/orange"
                android:textSize="@dimen/sp_18"
                android:text="@string/gita_name"/>

            <TextView
                android:layout_below="@id/chapter_no"
                android:id="@+id/chapter_show"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_5"
                android:text="@string/gita_name"
                android:textAlignment="center"
                android:textSize="@dimen/sp_20"
                android:textStyle="bold" />

            <TextView
                android:layout_marginStart="@dimen/dp_20"
                android:layout_marginVertical="@dimen/dp_20"
                android:layout_marginEnd="@dimen/dp_20"
                android:layout_below="@id/chapter_show"
                android:padding="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/chapter_details"
                android:text="@string/app_name"/>

            <com.google.android.material.divider.MaterialDivider
                android:layout_below="@+id/chapter_details"
                android:id="@+id/separator"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:dividerInsetStart="16dp"
                app:dividerInsetEnd="16dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:layout_below="@id/separator"
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginEnd="@dimen/dp_10"
                android:layout_marginBottom="@dimen/dp_10"
                android:scrollbars="vertical"
                android:scrollbarThumbVertical="@drawable/scrollbar_thumb"
                android:scrollbarSize="@dimen/dp_5"/>
        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/prev_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:contentDescription="@string/app_name"
        android:src="@drawable/arrow_back"
        app:fabSize="mini" />
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/next_button"
        app:fabSize="mini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="@dimen/dp_20"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_20"
        android:contentDescription="@string/app_name"
        android:src="@drawable/arrow_forward" />

</RelativeLayout>
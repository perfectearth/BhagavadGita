<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragment.QuizScoreFragment">
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_quiz_1st"
        android:layout_margin="@dimen/dp_15"
        app:cardElevation="@dimen/dp_5"
        app:cardCornerRadius="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@color/purple_800"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <com.google.android.material.card.MaterialCardView
                android:layout_margin="@dimen/dp_10"
                android:id="@+id/card_rank"
                android:layout_width="@dimen/dp_40"
                android:layout_height="@dimen/dp_40">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="#4"
                    android:textStyle="bold"/>
            </com.google.android.material.card.MaterialCardView>
            <TextView
                android:padding="@dimen/dp_5"
                android:layout_centerVertical="true"
                android:layout_toEndOf="@+id/card_rank"
                android:layout_alignParentEnd="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/description_a"/>
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <ImageView
        android:layout_marginTop="@dimen/dp_100"
        android:layout_marginHorizontal="@dimen/dp_40"
        android:layout_below="@id/card_quiz_1st"
        android:layout_width="match_parent"
        android:layout_height="290dp"
        android:src="@drawable/rank_design"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_marginHorizontal="@dimen/dp_40"
        android:id="@+id/lin_quiz_score"
        android:layout_below="@id/card_quiz_1st"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="3"
        android:layout_height="@dimen/dp_150">
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_30"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="@dimen/dp_5"
            android:layout_height="@dimen/dp_120">
            <ImageView
                android:background="@drawable/round_image"
                android:padding="@dimen/dp_10"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:id="@+id/two_position_photo"
                android:src="@drawable/logo"
                android:layout_centerHorizontal="true"/>
            <com.google.android.material.card.MaterialCardView
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:layout_below="@id/two_position_photo"
                app:cardElevation="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="@dimen/dp_5"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"/>
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
        <RelativeLayout

            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="@dimen/dp_5"
            android:layout_height="@dimen/dp_120">
            <ImageView
                android:background="@drawable/round_image"
                android:padding="@dimen/dp_10"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:id="@+id/first_position_photo"
                android:src="@drawable/logo"
                android:layout_centerHorizontal="true"/>
            <com.google.android.material.card.MaterialCardView
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:layout_below="@id/first_position_photo"
                app:cardElevation="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="@dimen/dp_5"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"/>
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="@dimen/dp_50"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:padding="@dimen/dp_5"
            android:layout_height="@dimen/dp_120">
            <ImageView
                android:background="@drawable/round_image"
                android:padding="@dimen/dp_10"
                android:layout_width="@dimen/dp_50"
                android:layout_height="@dimen/dp_50"
                android:id="@+id/third_position_photo"
                android:src="@drawable/logo"
                android:layout_centerHorizontal="true"/>
            <com.google.android.material.card.MaterialCardView
                android:layout_marginTop="@dimen/dp_5"
                android:layout_marginHorizontal="@dimen/dp_5"
                android:layout_below="@id/third_position_photo"
                app:cardElevation="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="@dimen/dp_5"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"/>
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>

    </LinearLayout>
    <com.google.android.material.card.MaterialCardView
        android:layout_marginTop="240dp"
        android:layout_marginHorizontal="@dimen/dp_20"
        app:cardElevation="@dimen/dp_10"
        app:cardCornerRadius="@dimen/dp_30"
        android:layout_below="@id/card_quiz_1st"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/dp_10"/>
    </com.google.android.material.card.MaterialCardView>
</RelativeLayout>
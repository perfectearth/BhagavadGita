<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout_leader"
        style="@style/MyTabLayoutStyle"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40"
        android:layout_marginHorizontal="@dimen/dp_20"
        android:layout_marginVertical="@dimen/dp_5"
        android:background="@drawable/tab_bg2"
        app:tabGravity="fill"
        app:tabInlineLabel="true"
        app:tabIndicator="@drawable/tab_bg"
        app:tabIndicatorGravity="stretch"
        app:tabIndicatorHeight="@dimen/dp_60"
        app:tabTextColor="@color/black"
        android:contentDescription="@string/app_name"/>
    <androidx.viewpager2.widget.ViewPager2
        android:layout_below="@+id/tab_layout_leader"
        android:id="@+id/view_pager_leader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
        android:id="@+id/chapter_click"
        android:layout_width="150dp"
        android:layout_height="180dp"
        app:cardElevation="@dimen/dp_5"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_10"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="10dp"
        android:focusable="true">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_gravity="end|bottom"
            android:layout_marginTop="@dimen/dp_50"
            android:alpha="0.2"
            android:contentDescription="@string/app_name"
            android:scaleType="fitStart"
            android:scaleY="-1"
            android:scaleX="-1"
            android:src="@drawable/down_frame"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <androidx.cardview.widget.CardView
                android:id="@+id/chapter_card"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_10"
                app:cardCornerRadius="@dimen/dp_10">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:layout_marginTop="@dimen/dp_50"
                    android:alpha="0.3"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitStart"
                    android:scaleX="-1"
                    android:scaleY="-1"
                    android:src="@drawable/down_frame"
                    app:tint="@color/teal_700" />

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/dp_50"
                    android:alpha="0.3"
                    android:contentDescription="@string/app_name"
                    android:scaleType="fitStart"
                    android:src="@drawable/up_frame" />

                <TextView
                    android:id="@+id/chapter_serial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/chapter"
                    android:textAlignment="center"
                    android:layout_marginHorizontal="@dimen/dp_5"
                    android:textSize="@dimen/sp_20"
                    android:textStyle="bold" />
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/chapter_card"
                android:orientation="vertical"
                android:padding="@dimen/dp_5">

                <TextView
                    android:id="@+id/chapter_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:padding="@dimen/dp_5"
                    android:text="@string/app_name"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="wrap_content"
                        android:contentDescription="icon_list"
                        android:padding="@dimen/dp_5"
                        android:id="@+id/chapter_icon"
                        android:src="@drawable/list_icon" />

                    <TextView
                        android:id="@+id/chapter_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:maxLines="1"
                        android:padding="@dimen/dp_5"
                        android:text="@string/app_name" />
                </LinearLayout>

            </LinearLayout>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>